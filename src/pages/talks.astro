---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import TalkPreview from "../components/TalkPreview.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";

const talks = (await getCollection("talks")).sort(
	(a, b) => b.data.talkDate.valueOf() - a.data.talkDate.valueOf()
);
---

<BaseLayout
	title="My Talks | Jorge del Casar"
	description="Learn about Jorge del Casar's most recent talks"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="My Talks"
				tagline="See my future and past talks to get an idea of my knoledge and comunication skills."
				align="start"
			/>
			<Grid variant="offset">
				{
					talks.map((talk) => (
						<li>
							<TalkPreview talk={talk} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
